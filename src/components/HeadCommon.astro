<meta name="viewport" content="width=device-width" />
<meta name="theme-color" content="hsl(256, 44%, 15%)" media="(prefers-color-scheme: dark)" />
<meta name="theme-color" content="hsl(273, 37%, 93%)" media="(prefers-color-scheme: light)" />
<link rel="icon" type="image/png" href={`${assetsUrl}/static/images/favicon/favicon.png`} />
<link
	rel="icon"
	type="image/png"
	href={`${assetsUrl}/static/images/favicon/favicon.png`}
	sizes="32x32"
/>
