<script is:inline defer>
  (function() {
    if ((window.location.origin !== 'https://www.azion.com' && window.location.origin !== 'https://azion.com') || window.location.search.match(/trd3=false/)) {
      console.log('Taboola: disabled');
      return;
    }

    window._tfa = window._tfa || [];
    window._tfa.push({
      notify: 'event',
      name: 'page_view',
      id: 1658862
    });

    function loadScript() {
      !function (t, f, a, x) {
        if (!document.getElementById(x)) {
          t.async = 1;
          t.src = a;
          t.id=x;
          f.parentNode.insertBefore(t, f);
        }
      }(
        document.createElement('script'),
        document.getElementsByTagName('script')[0],
        '//cdn.taboola.com/libtrc/unip/1658862/tfa.js',
        'tb_tfa_script'
      );
    }

    window.addEventListener('load', () => {
      window.addEventListener('scroll', () => {
        if(window.scrollY < 100) return;
        if(loaded) return;

        loadScript();
        loaded = true;
      });

      window.addEventListener('mouseover', () => {
        if(loaded) return;

        loadScript();
        loaded = true;
      });
    });
  })();
</script>

